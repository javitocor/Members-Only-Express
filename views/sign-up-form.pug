extends layout

block content

  h1 #{title}

  form(method='POST' action='')
  div.form-group
      label(for='fname') First Name:
      input#fname.form-control(type='text', placeholder='Add your first name' name='fname' required='true' value='' )
      div.form-group
      label(for='lname') Last Name:
      input#lname.form-control(type='text', placeholder='Add your last name' name='lname' required='true' value='' )
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='Add your username' name='username' required='true' value='' )
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='text', placeholder='Add your password' name='password' required='true' value='' )
    button.btn.btn-primary(type='submit') Submit
  
  if errors 
    ul
      for error in errors
        li!= error.msg